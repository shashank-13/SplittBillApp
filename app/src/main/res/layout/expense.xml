<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Starter.TabActivity">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:hint="@string/autocompletion_help"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_tag"
            android:layout_width="wrap_content"
            android:minWidth="240dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="Tag Friends" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@drawable/ic_date_range_black_24dp"
            android:id="@+id/date_Picker"
            android:layout_gravity="end|bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_group_message"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            >

            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:id="@+id/expense_message"
                android:fontFamily="serif"
                android:inputType="text"
                android:maxLength="140"
                android:textStyle="bold"
                android:hint="Message"/>



        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_format_list_bulleted_black_24dp"
            android:id="@+id/image_button_list"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/rupee"/>
                <EditText
                    android:id="@+id/edit_expense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="0.00"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:layout_marginStart="48dp"
                  />
            </LinearLayout>

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
       android:layout_marginTop="48dp"
        android:text="Save" />




</LinearLayout>